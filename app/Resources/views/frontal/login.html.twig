{#Plantilla de nuestra aplicacion#}
{% extends 'base.html.twig' %}
{% block title %} Registro Usuario {% endblock %}
{# CONTENIDO #}
{% block contenido %}

    <div class="container">
        <h1 class="mt-4 mb-3"> Mostachos!
            <small> Registro de usuario</small>
        </h1>
        <div class="row">
            <div class="col-lg-6">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login') }}" method="post">
                <label for="username">Username:</label>
                <input class="form-control mb-2" type="text" id="username" name="_username" value="{{ last_username }}" />

                <label for="password">Password:</label>
                <input class="form-control mb-2" type="password" id="password" name="_password" />


                <button type="submit">login</button>
            </form>
        </div>
        <div class="col-lg-6">
            <h2> Porque registarse</h2>
